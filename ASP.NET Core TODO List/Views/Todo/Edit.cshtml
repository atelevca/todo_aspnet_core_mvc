@{
}

@model TodoItem

@if (Model is null)
{
    <h1>There is no Item with this ID</h1>
}
else
{
    <h1>Edit Item</h1>

    <form method="post" class="mt-2">
        <div class="mt-2">
            <label class="form-label">ID</label>
            <input class="form-control" type="text" id="title" asp-for="Id" readonly />
        </div>
        
        <div class="mt-2">
            <label class="form-label">Title</label>
            <input class="form-control" type="text" id="title" asp-for="Title" required />
        </div>

        <div class="mt-2">
            <label class="form-label">Description</label>
            <input class="form-control" type="text" id="description" asp-for="Description" />
        </div>

        <div class="mt-2">
            <label class="form-label">Priority</label>

            <select class="form-select" asp-for="Priority" required>
                <option value="1">High</option>
                <option value="2">Medium</option>
                <option value="3">Low</option>
            </select>
        </div>

        <div class="mt-2">
            <label class="form-label">DueDate</label>
            <input class="form-control" type="date" id="dueDate" asp-for="DueDate" required />
        </div>

        <div class="mt-2 d-flex gap-2 align-items-center">
            <input type="checkbox" id="isCompleted" asp-for="IsCompleted" />
            <label for="subscribed" class="form-label">Is Completed </label>
        </div>

        <div class="d-flex gap-3">
            <button type="submit" class="btn btn-primary"> Save </button>
            <button type="submit" class="btn btn-danger" asp-controller="Todo"
            asp-action="Delete"> Delete </button>
        </div>
    </form>
}